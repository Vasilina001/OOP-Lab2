<Window x:Class="QuadraticSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Квадратне рівняння" Height="400" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Введіть a:"/>
            <TextBox x:Name="textA" Margin="0,5"/>

            <Label Content="Введіть b:"/>
            <TextBox x:Name="textB" Margin="0,5"/>

            <Label Content="Введіть c:"/>
            <TextBox x:Name="textC" Margin="0,5"/>
            <Button Content="Обчислити" Click="Button_Click" Margin="0,10"/>
            
            <Label x:Name="labelD" Content="" Margin="0,5"/>
            <Label x:Name="labelX1" Content="" Margin="0,5"/>
            <Label x:Name="labelX2" Content="" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
